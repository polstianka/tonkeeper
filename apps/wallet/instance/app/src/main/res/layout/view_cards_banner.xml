<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginBottom="-8dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_content_bordered_16"
        android:padding="@dimen/offsetMedium">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cards_44"
            android:layout_marginTop="10dp"
            android:layout_marginRight="@dimen/offsetMedium"/>

        <uikit.widget.ColumnLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_card_title"
                android:textAppearance="@style/TextAppearance.Label1"
                android:textColor="?attr/textPrimaryColor" />
            
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/bank_card_subtitle"
                android:textAppearance="@style/TextAppearance.Body2"
                android:textColor="?attr/textSecondaryColor" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/action"
                android:layout_marginTop="12dp"
                style="@style/Widget.App.Button.Small.Secondary"
                android:paddingStart="@dimen/offsetMedium"
                android:paddingEnd="@dimen/offsetMedium"
                android:text="@string/back_card_details" />



        </uikit.widget.ColumnLayout>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/close"
        android:layout_width="@dimen/actionSize"
        android:layout_height="@dimen/actionSize"
        android:layout_margin="8dp"
        android:layout_gravity="end|top"
        android:src="@drawable/ic_close_16"
        android:tint="?attr/iconTertiaryColor"
        android:scaleType="centerInside"/>

</FrameLayout>