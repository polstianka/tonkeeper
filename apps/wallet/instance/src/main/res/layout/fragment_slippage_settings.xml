<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.ColumnLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uikit.widget.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:action="@drawable/ic_close_16"
        android:title="@string/settings"
        app:ignoreSystemOffset="true"
        app:makeTitleFromStart="true" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <uikit.widget.DescriptionView
            android:id="@+id/title_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/offsetMedium"
            android:description="@string/swap_settings_slippage_description"
            android:title="@string/swap_settings_slippage_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <uikit.widget.InputRoundedView
            android:id="@+id/value_custom"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginHorizontal="16dp"
            android:singleLine="true"
            android:digits="0123456789.,"
            android:inputType="numberDecimal"
            android:textAppearance="@style/TextAppearance.Body1"
            android:gravity="center_vertical"
            android:hint="@string/swap_settings_slippage_custom_hint"
            app:inputSuffixText="@string/swap_settings_slippage_custom_suffix"
            app:inputSuffixSpacing="6.dp"
            app:layout_constraintTop_toBottomOf="@id/title_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <uikit.widget.SelectButtonView
            android:id="@+id/value_1percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:text="@string/swap_settings_slippage_1percent"
            app:layout_constraintEnd_toStartOf="@id/value_3percent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value_custom"
            app:layout_constraintVertical_chainStyle="spread" />

        <uikit.widget.SelectButtonView
            android:id="@+id/value_3percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:text="@string/swap_settings_slippage_3percent"
            app:layout_constraintEnd_toStartOf="@id/value_5percent"
            app:layout_constraintStart_toEndOf="@id/value_1percent"
            app:layout_constraintTop_toTopOf="@id/value_1percent"
            />

        <uikit.widget.SelectButtonView
            android:id="@+id/value_5percent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/swap_settings_slippage_5percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/value_3percent"
            app:layout_constraintTop_toTopOf="@id/value_1percent" />

        <uikit.widget.PreferenceView
            android:id="@+id/expert_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:description="@string/swap_settings_expert_mode_description"
            android:title="@string/swap_settings_expert_mode_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/value_1percent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</uikit.widget.ColumnLayout>