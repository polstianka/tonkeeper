<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.item.BaseItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:isHeightHardcoded="false">

    <TextView
        android:id="@+id/view_confirm_stake_item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textAppearance="@style/TextAppearance.Body1"
        android:layout_weight="1"
        android:textColor="?textSecondaryColor"
        tools:text="Fee" />

    <uikit.widget.ColumnLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/view_confirm_stake_item_text_primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Label1"
            android:textColor="?textPrimaryColor"
            tools:text="~0.01 TON" />

        <TextView
            android:id="@+id/view_confirm_stake_item_text_secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Body2"
            android:textColor="?textSecondaryColor"
            tools:text="$0.01" />
    </uikit.widget.ColumnLayout>

</uikit.widget.item.BaseItemView>