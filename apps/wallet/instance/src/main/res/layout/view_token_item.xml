<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.item.BaseItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    app:isHeightHardcoded="false">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/view_token_item_icon"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:layout_gravity="center_vertical"
        app:roundedCornerRadius="22dp"
        tools:background="#f00" />

    <uikit.widget.ColumnLayout
        android:layout_marginStart="16dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <uikit.widget.RowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_token_item_symbol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textAppearance="@style/TextAppearance.Label1"
                android:textColor="?textPrimaryColor"
                tools:text="ton" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/view_token_item_amount_crypto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Label1"
                android:textColor="?textPrimaryColor"
                tools:text="100,000.01" />
        </uikit.widget.RowLayout>

        <uikit.widget.RowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_token_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.Body2"
                android:textColor="?textSecondaryColor"
                tools:text="Toncoin" />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/view_token_item_amount_fiat"
                android:textAppearance="@style/TextAppearance.Body2"
                tools:text="$601,000.01"
                android:textColor="?textSecondaryColor"/>
        </uikit.widget.RowLayout>
    </uikit.widget.ColumnLayout>

</uikit.widget.item.BaseItemView>