<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="230dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/offsetMedium"
    android:paddingHorizontal="@dimen/offsetMedium"
    android:paddingBottom="36dp"
    android:layout_marginTop="@dimen/offsetMedium"
    android:layout_marginBottom="@dimen/offsetExtraSmall"
    android:orientation="vertical"
    android:clipToPadding="false"
    android:background="@drawable/bg_content"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/ssend"
        android:layout_width="44dp"
        android:background="@drawable/bg_swap"
        android:layout_height="44dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:layout_width="20dp"
        android:background="@drawable/bg_swap"
        android:layout_marginTop="11dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="20dp"
        android:background="@drawable/bg_swap"
        android:layout_marginTop="27dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/sep1"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:layout_width="20dp"
        android:background="@drawable/bg_swap"
        android:layout_marginTop="27dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="@id/sep2"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/smax"
        android:layout_width="130dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="4dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintStart_toEndOf="@id/ssend"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/smax2"
        android:layout_width="170dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="24dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintStart_toEndOf="@id/ssend"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/sep1"
        android:layout_width="match_parent"
        android:background="@color/separatorCommonDark"
        app:layout_constraintTop_toBottomOf="@id/ssend"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="-16dp"
        android:layout_height="1dp" />

    <View
        android:id="@+id/ssend2"
        android:layout_width="44dp"
        android:background="@drawable/bg_swap"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/sep1"
        app:layout_constraintStart_toStartOf="parent"/>


    <View
        android:id="@+id/smax3"
        android:layout_width="130dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintTop_toTopOf="@id/sep1"
        app:layout_constraintStart_toEndOf="@id/ssend2" />

    <View
        android:id="@+id/smax7"
        android:layout_width="170dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="40dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintStart_toEndOf="@id/ssend2"
        app:layout_constraintTop_toTopOf="@id/sep1" />

    <View
        android:id="@+id/sep2"
        android:layout_width="match_parent"
        android:background="@color/separatorCommonDark"
        app:layout_constraintTop_toBottomOf="@id/ssend2"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="-16dp"
        android:layout_height="1dp" />

    <View
        android:id="@+id/ssend3"
        android:layout_width="44dp"
        android:background="@drawable/bg_swap"
        android:layout_height="44dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="@id/sep2"
        app:layout_constraintStart_toStartOf="parent"/>


    <View
        android:id="@+id/smax4"
        android:layout_width="130dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="20dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintTop_toTopOf="@id/sep2"
        app:layout_constraintStart_toEndOf="@id/ssend3" />

    <View
        android:id="@+id/smax5"
        android:layout_width="170dp"
        android:layout_height="16dp"
        android:paddingStart="@dimen/offsetMedium"
        android:paddingBottom="@dimen/offsetExtraSmall"
        android:layout_marginTop="40dp"
        android:layout_marginStart="14dp"
        android:background="@drawable/bg_swap"
        android:gravity="center_vertical"
        android:textAllCaps="true"
        android:textColor="?attr/accentBlueColor"
        android:textAppearance="@style/TextAppearance.Label2"
        app:layout_constraintStart_toEndOf="@id/ssend3"
        app:layout_constraintTop_toTopOf="@id/sep2" />

</androidx.constraintlayout.widget.ConstraintLayout>