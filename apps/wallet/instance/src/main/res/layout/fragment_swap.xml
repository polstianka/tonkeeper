<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <uikit.widget.HeaderView
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:action="@drawable/ic_close_16"
        android:icon="@drawable/ic_sliders_16"
        app:ignoreSystemOffset="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <uikit.widget.webview.bridge.BridgeWebView
        android:id="@+id/web"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <include
        android:id="@+id/send_layout"
        layout="@layout/view_swap_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header" />

    <include
        android:id="@+id/receive_layout"
        layout="@layout/view_swap_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/send_layout" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/bg_button_tertiary"
        android:scaleType="centerInside"
        android:src="@drawable/ic_swap_vertical_16"
        app:layout_constraintBottom_toBottomOf="@id/receive_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/send_layout" />

    <Button
        style="@style/Widget.App.Button.Secondary"
        android:id="@+id/token_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="@dimen/offsetMedium"
        android:textAppearance="@style/TextAppearance.Label1"
        app:layout_constraintTop_toBottomOf="@id/receive_layout"
        android:text="@string/enter_amount"/>

</androidx.constraintlayout.widget.ConstraintLayout>