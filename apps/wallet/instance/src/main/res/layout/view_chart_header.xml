<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="108dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:paddingTop="@dimen/offsetMedium">

    <FrameLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="@dimen/offsetMedium">

        <uikit.widget.FrescoView
            android:id="@+id/icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/bg_oval"
            android:backgroundTint="?attr/backgroundContentTintColor"
            android:src="@drawable/ic_ton_with_bg"
            app:roundAsCircle="true" />

        <uikit.widget.FrescoView
            android:id="@+id/badge"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/bg_oval"
            android:backgroundTint="?attr/backgroundContentTintColor"
            android:visibility="gone"
            app:roundAsCircle="true"
            tools:visibility="visible" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.H2"
        android:textColor="?attr/textPrimaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/currency_balance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:singleLine="true"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/send_balance" />

</androidx.constraintlayout.widget.ConstraintLayout>