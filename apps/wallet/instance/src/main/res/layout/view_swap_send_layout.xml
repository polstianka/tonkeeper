<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/offsetMedium"
    android:background="@drawable/bg_wallet_bubble_no_ripple"
    android:paddingStart="@dimen/offsetMedium"
    android:paddingTop="@dimen/offsetMedium"
    android:paddingEnd="@dimen/offsetMedium"
    android:paddingBottom="28dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/send"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/send_balance"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingHorizontal="8dp"
        android:singleLine="true"
        android:text="@string/balance_total"
        android:textAlignment="viewEnd"
        android:textAppearance="@style/TextAppearance.Body2"
        android:textColor="?attr/textSecondaryColor"
        app:layout_constraintBottom_toBottomOf="@id/max_button"
        app:layout_constraintEnd_toStartOf="@id/max_button"
        app:layout_constraintStart_toEndOf="@id/send_title"
        app:layout_constraintTop_toTopOf="@id/max_button" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/max_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="@string/max"
        android:textAppearance="@style/TextAppearance.Label2"
        android:textColor="?attr/textAccentColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tonapps.tonkeeper.ui.screen.swap.SmallTokenView
        android:id="@+id/send_token_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@id/send_title"
        app:layout_constraintTop_toBottomOf="@id/send_title" />

    <com.tonapps.tonkeeper.fragment.send.view.AmountInput
        android:id="@+id/send_amount_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:background="@null"
        android:digits="0123456789."
        android:fontFamily="@font/montserrat_semi_bold"
        android:gravity="end"
        android:hint="0"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:text="0"
        android:textAppearance="@style/TextAppearance.NUM2"
        android:textColor="?attr/textPrimaryColor"
        android:textColorHint="?attr/textSecondaryColor"
        android:textCursorDrawable="@drawable/cursor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/send_token_view"
        app:layout_constraintTop_toTopOf="@id/send_token_view" />

</androidx.constraintlayout.widget.ConstraintLayout>