<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_modal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/offsetMedium"
        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/settings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/bg_oval_button_secondary"
                android:backgroundTint="?attr/buttonSecondaryBackgroundColor"
                android:scaleType="centerInside"
                android:src="@drawable/sliders_16"
                android:tint="?attr/buttonSecondaryForegroundColor" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_marginHorizontal="@dimen/offsetMedium"
                android:gravity="center"
                android:textAlignment="gravity"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="@string/swap"
                android:textColor="?attr/textPrimaryColor"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_vertical|end"
                android:background="@drawable/bg_oval_button_secondary"
                android:backgroundTint="?attr/buttonSecondaryBackgroundColor"
                android:scaleType="centerInside"
                android:src="@drawable/ic_close_16"
                android:tint="?attr/buttonSecondaryForegroundColor" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <uikit.widget.SkeletonLayout
            android:id="@+id/skeleton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <include layout="@layout/shimmer_swap" />

                <include layout="@layout/shimmer_swap" />
            </LinearLayout>
        </uikit.widget.SkeletonLayout>

        <LinearLayout
            android:id="@+id/main_content"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/offsetMedium"
                android:paddingHorizontal="@dimen/offsetMedium"
                android:clipToPadding="false"
                android:paddingBottom="@dimen/offsetLarge"
                android:layout_marginTop="@dimen/offsetMedium"
                android:layout_marginBottom="@dimen/offsetExtraSmall"
                android:orientation="vertical"
                android:background="@drawable/bg_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/send"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/send"
                    android:paddingBottom="@dimen/offsetExtraSmall"
                    android:textAppearance="@style/TextAppearance.Body2"
                    android:textColor="?attr/textSecondaryColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.tonapps.tonkeeper.ui.screen.swap.SwapChooseView
                    android:id="@+id/token"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/offsetExtraSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/send"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/max"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="4dp"
                    android:translationX="4dp"
                    android:text="@string/max"
                    android:gravity="center_vertical"
                    android:textAllCaps="true"
                    android:foreground="@drawable/bg_swap_ripple"
                    android:textColor="?attr/accentBlueColor"
                    android:textAppearance="@style/TextAppearance.Label2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/available"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Body2"
                    app:layout_constraintEnd_toStartOf="@id/max"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Balance: 100"
                    android:gravity="end"
                    android:textColor="?attr/textSecondaryColor"/>

                <com.tonapps.tonkeeper.fragment.send.view.AmountInput
                    android:id="@+id/value"
                    android:layout_width="0dp"
                    android:layout_height="48.76dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:layout_marginTop="4dp"
                    android:digits="0123456789.,"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="gravity"
                    android:gravity="center_vertical|end"
                    android:text="0"
                    android:hint="0"
                    app:layout_constraintStart_toEndOf="@id/token"
                    app:layout_constraintTop_toBottomOf="@id/max"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:paddingTop="@dimen/offsetLarge"
                android:layout_marginTop="@dimen/offsetExtraSmall"
                android:paddingHorizontal="@dimen/offsetMedium"
                android:layout_marginBottom="@dimen/offsetExtraSmall"
                android:orientation="vertical"
                android:background="@drawable/bg_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/receive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/receive"
                    android:paddingBottom="@dimen/offsetExtraSmall"
                    android:textAppearance="@style/TextAppearance.Body2"
                    android:textColor="?attr/textSecondaryColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.tonapps.tonkeeper.ui.screen.swap.SwapChooseView
                    android:id="@+id/token_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/offsetExtraSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/receive"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/available_rec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/offsetExtraSmall"
                    android:textAppearance="@style/TextAppearance.Body2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Balance: 100,000.01"
                    android:gravity="end"
                    android:textColor="?attr/textSecondaryColor"/>

                <com.tonapps.tonkeeper.fragment.send.view.AmountInput
                    android:id="@+id/value_rec"
                    android:layout_width="0dp"
                    android:layout_height="48.76dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:digits="0123456789.,"
                    android:enabled="false"
                    android:inputType="numberDecimal"
                    android:fontFamily="@font/montserrat_semi_bold"
                    android:textColor="?attr/textPrimaryColor"
                    android:textCursorDrawable="@drawable/cursor"
                    android:textAlignment="gravity"
                    android:gravity= "center_vertical|end"
                    android:text="0"
                    android:hint="0"
                    app:layout_constraintStart_toEndOf="@id/token_rec"
                    app:layout_constraintTop_toBottomOf="@id/available_rec"
                    app:layout_constraintEnd_toEndOf="parent" />

                <Space
                    android:id="@+id/space"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/token_rec"
                    android:layout_height="16dp" />

                <FrameLayout
                    android:id="@+id/rate"
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible"
                    android:layout_marginLeft="-16dp"
                    android:layout_marginRight="-16dp"
                    app:layout_constraintTop_toBottomOf="@id/space"
                    android:foreground="@drawable/bg_swap_ripple_bottom"
                    android:layout_height="49dp">

                    <View
                        android:layout_width="match_parent"
                        android:background="?attr/separatorCommonColor"
                        android:layout_height="1dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/rate_text"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="70dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/blockchain_fee"
                        android:textColor="?attr/textSecondaryColor"
                        android:singleLine="true"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/provider_fee_text" />

                    <View
                        android:id="@+id/second_divider"
                        android:layout_width="match_parent"
                        android:background="?attr/separatorCommonColor"
                        android:layout_gravity="bottom"
                        android:visibility="gone"
                        android:layout_height="1dp" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/expand"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_gravity="center_vertical|end"
                        android:layout_marginEnd="10dp"
                        android:src="@drawable/ic_chevron_down_16"
                        android:background="@drawable/bg_swap_ripple" />

                    <uikit.widget.LoaderView
                        android:id="@+id/loader2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="2dp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical|end"
                        android:color="@color/constantWhite"
                        android:layout_marginEnd="18dp"
                        android:trackTint="#52ffffff"/>

                </FrameLayout>

                <com.tonapps.tonkeeper.ui.screen.swap.SwapSimulationView
                    android:id="@+id/simulation"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/offsetMedium"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/rate"
                    android:layout_height="210dp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/button_hint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/itemHeight"
            android:layout_marginBottom="@dimen/offsetExtraSmall"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/offsetLarge"
            android:foreground="@drawable/bg_swap_ripple"
            android:background="@drawable/bg_content_selectable">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:includeFontPadding="false"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_semi_bold"
                android:textColor="?attr/textPrimaryColor" />

            <uikit.widget.LoaderView
                android:id="@+id/loader"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:color="@color/constantWhite"
                android:trackTint="#52ffffff"/>

        </FrameLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/flip"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="end"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="166dp"
        android:src="@drawable/swap_vertical_16"
        android:background="@drawable/bg_oval_button_tertiary" />

</FrameLayout>