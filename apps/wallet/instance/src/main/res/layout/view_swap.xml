<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:paddingHorizontal="16dp"
    tools:background="?attr/backgroundPageColor"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <com.tonapps.tonkeeper.ui.component.swap.SendSwapView
        android:id="@+id/send"
        android:layout_width="0dp"
        android:layout_height="@dimen/swap_target_height"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.tonapps.tonkeeper.ui.component.swap.ReceiveSwapView
        android:id="@+id/receive"
        android:layout_width="0dp"
        android:layout_height="@dimen/swap_target_height"
        android:background="@drawable/bg_content"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/send"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.tonapps.tonkeeper.ui.component.swap.SwapButtonView
        android:id="@+id/btn_swap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/send"
        app:layout_constraintEnd_toEndOf="@id/send"
        app:layout_constraintBottom_toTopOf="@id/receive"
        android:layout_marginEnd="32dp"
        android:visibility="invisible"
        tools:visibility="visible"
        />

</merge>