<?xml version="1.0" encoding="utf-8"?>
<uikit.widget.item.BaseItemView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/view_trade_method_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="14dp"
        android:background="@null"
        android:clickable="false" />

    <TextView
        android:id="@+id/view_trade_method_title_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="16dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:fontFamily="@font/montserrat_semi_bold"
        android:maxLines="1"
        android:textColor="?attr/textPrimaryColor"
        android:textSize="16sp"
        tools:text="Credit Card" />

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/view_trade_method_drawee_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        tools:background="#f00"
        tools:layout_height="48dp"
        tools:layout_width="48dp" />

</uikit.widget.item.BaseItemView>